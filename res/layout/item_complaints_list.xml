<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/img_subject"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_eye"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/regd_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_subject"
        android:text="Medium Text"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/comp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/regd_no"
        android:layout_below="@+id/regd_no"
        android:layout_marginTop="10dp"
        android:text="Medium Text"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/comp_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/comp_type"
        android:layout_below="@+id/comp_type"
        android:layout_marginTop="10dp"
        android:text="Medium Text"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Medium Text"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/img_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/nav_blue" />

    <ImageView
        android:id="@+id/image_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/comp_type"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btn_status" />

</RelativeLayout>